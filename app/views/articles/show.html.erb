<div class="row">
  <div class="col">
    <h1><%= @article.title %></h1>

    <p><%= @article.body %></p>

    <div class="d-flex items-center">
      <%= link_to "Edit", edit_article_path(@article), class: "btn btn-success btn-sm px-3" %>
      <%= button_to "Destroy", @article, method: :delete, class: "btn btn-danger btn-sm px-3 ms-2" %>
    </div>

    <div class="mt-5">
      <h2>Add a comment: </h2>
      <%= render 'comments/form' %>
    </div>
  </div>

  <div class="col">
    <h2>Comments</h2>
    <%= render @article.comments %>
  </div>
</div>